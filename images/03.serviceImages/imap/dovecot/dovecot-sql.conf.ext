
driver =  mysql
  connect = host=mysql.engines.internal dbname=postfix user=postfix password=postfix

password_query = \
  SELECT username, domain, password \
  FROM mailbox WHERE username = '%u' 


user_query = \
  SELECT maildir As home, local_part as uid, domain as gid \
  FROM mailbox WHERE username = '%u' AND domain = '%d'

iterate_query = SELECT username AS user FROM mailbox
