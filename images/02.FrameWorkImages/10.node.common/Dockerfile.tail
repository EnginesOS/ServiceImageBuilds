
RUN mkdir node_js_src &&\
	cd node_js_src &&\
	wget -N https://nodejs.org/dist/v${NODE_VERSION}/node-v$NODE_VERSION-linux-x64.tar.gz  &&\
	tar node-v${NODE_VERSION}-linux-x64.tar.gz &&\
	cd node-v* &&\
	./configure &&\
	make &&\
	make install &&\
	groupadd node &&\
 	useradd -g node -d /home/node -m -G containers node &&\
 	npm -g install npm@latest &&\
	mkdir -p /home/home_dir/.config /home/home_dir/.npm &&\
 	cd .. ; rm -r ~/node_js_src
 	 