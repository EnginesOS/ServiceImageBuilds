options {
        directory "/var/cache/bind";

     allow-recursion { trusted; };
     allow-query { any; };
     allow-query-cache { trusted; };

   	include "/home/bind/engines/forwarders";
   	
        dnssec-validation auto;

        auth-nxdomain no;    # conform to RFC1035
        listen-on-v6 { none; };
        listen-on {any;};
        version none;
};
